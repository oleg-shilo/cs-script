                    {
                        <div class="locals-table-container">
                            <table class="table table-sm table-bordered locals-table watch-table">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Value</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Variables.Count; i++)
                                    {
