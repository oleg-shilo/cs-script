    [JSInvokable]
    public async Task OnEditorChanged()
    {
        if(!Document.IsModified && !Editor.DocLoadingInProgress)
        {
            Document.IsModified = true;
            // $"Document.IsModified = {Document.IsModified}".ProfileLog();
            UIEvents.NotifyStateChanged();
        }
        Editor.DocLoadingInProgress = false;
